FROM --platform=i386 i386/debian:buster
ARG DEBIAN_FRONTEND=noninteractive
RUN sed -i s/deb.debian.org/archive.debian.org/g /etc/apt/sources.list
RUN sed -i s/security.debian.org/archive.debian.org/g /etc/apt/sources.list
RUN sed -i s/stretch-updates/stretch/g /etc/apt/sources.list
RUN apt-get clean && apt-get update && apt-get -y upgrade
RUN apt-get -y install \
	man-db \
	apt-utils \
	gcc \
 	vim \
	unzip \
	dbus \
	base \
	patch \
	ucf \
	file \
	curl \
	less \
	nano \
	netcat-openbsd \
	gpg 
# Get zeek
RUN echo 'deb https://download.opensuse.org/repositories/security:/zeek/xUbuntu_22.04/ /' | sudo tee /etc/apt/sources.list.d/security:zeek.list
RUN curl -fsSL https://download.opensuse.org/repositories/security:zeek/xUbuntu_22.04/Release.key | gpg --dearmor | sudo tee /etc/apt/trusted.gpg.d/security_zeek.gpg > /dev/null
RUN apt-get update && apt-get install \
	zeek-7.0
# To get Kali packages
COPY --chown=user:user ./kali-keyring.gpg /etc/apt/trusted.gpg.d
RUN echo 'deb http://http.kali.org/kali kali-rolling main contrib non-free non-free-firmware' >> /etc/apt/sources.list
RUN apt-get -y install \
	tcpdump
# Get tshark while avoiding the user prompt
RUN echo "wireshark-common wireshark-common/install-setuid boolean true" | debconf-set-selections
RUN	DEBIAN_FRONTEND=noninteractive apt-get -y install \
	wireshark
RUN useradd -m user && echo "user:password" | chpasswd
# We set WORKDIR, as this gets extracted by Webvm to be used as the cwd. This is optional.
WORKDIR /home/user/
# Additional files
COPY --chown=user:user ./include/laufey /home/user/laufey
COPY --chown=user:user ./include/pcaps /home/user/pcaps
# Serve a new quote after every new shell. Awk is used to subsitute every "\\" as a newline to have multi-line quotes.
# The quote is added at the end of banner.txt
COPY --chown=user:user ./include/quotes.txt /home/user/quotes.txt
COPY --chown=user:user ./include/intro.txt /home/user/intro.txt
# Startup script
COPY --chown=user:user ./include/start.sh /home/user/start.sh
RUN chmod 777 /home/user/start.sh
# We set env, as this gets extracted by Webvm. This is optional.
ENV HOME="/home/user" TERM="xterm" USER="user" SHELL="/bin/bash" EDITOR="vim" LANG="en_US.UTF-8" LC_ALL="C"
RUN echo 'root:password' | chpasswd
CMD ["/bin/bash", "-c", "./start.sh 2> /dev/null ; exec /bin/bash"]